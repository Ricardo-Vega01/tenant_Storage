generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String
  name         String
  role         UserRole      @default(User)
  state        UserState     @default(Active)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  sessions     UserSession[]
  files        File[]
  folders      Folder[]
}

enum UserState {
  Active
  Inactive
  Deleted
}

enum UserRole {
  Admin
  User
}

model UserSession {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  refreshToken     String
  ipAddress        String?
  userAgent        String?
  deviceId         String?
  createdAt        DateTime @default(now())
  lastUsedAt       DateTime @default(now())
  expiresAt        DateTime
  revoked          Boolean  @default(false)

  @@index([userId])
  @@index([deviceId])
}

model Folder {
  id        String    @id @default(cuid())
  name      String
  parentId  String?
  parent    Folder?   @relation("FolderParent", fields: [parentId], references: [id])
  children  Folder[]  @relation("FolderParent")
  ownerId   String
  owner     User      @relation(fields: [ownerId], references: [id])
  files     File[]
  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([ownerId])
  @@index([parentId])
}

model File {
  id        String    @id @default(cuid())
  name      String
  mimeType  String
  size      Int
  url       String
  folderId  String?
  folder    Folder?   @relation(fields: [folderId], references: [id])
  ownerId   String
  owner     User      @relation(fields: [ownerId], references: [id])
  createdAt DateTime  @default(now())
  updatedBy String?
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([ownerId])
  @@index([folderId])
}

model ActionLog {
  id         String   @id @default(cuid())
  userId     String
  action     String // e.g. "UPLOAD_FILE", "DELETE_FOLDER"
  entityId   String?
  entityType String? // "File", "Folder", "User"
  timestamp  DateTime @default(now())
}
